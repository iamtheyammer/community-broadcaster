.video-js .vjs-picture-in-picture-control
    display none !important

button , video, div
    outline none !important

.vjs-big-play-button
    top 50% !important 
    left 50% !important 
    transform translate(-50%, -50%)


.loginbutton
    position: absolute;
    right: 3%;
    top: 3%;
    width: 150px;
    height: 40px;
    background: #f04f27;
    border: none;
    outline: none;
    border-radius: 5px;
    color: white;
    font-size: 17px;
    letter-spacing: 2px;
    font-weight: 300;
    text-transform: uppercase;
    cursor pointer

p.fullXCenter
    bottom: 5%;
    color: #bbbbbb;
    font-weight: 100;
    font-size: 21px;
    text-align center

.slate
    width 1920px
    height 1080px
    background-image url('/img/2880px-SMPTE_Color_Bars_16x9.svg.png')
    z-index 90 
    display none


@media screen and (max-width: 2500px) {
    .my-video-dimensions, .slate {
        width 1600px
        height 900px
    }
}

@media screen and (max-width: 2100px) {
    .my-video-dimensions, .slate {
        width 1366px
        height 768px
    }
}

@media screen and (max-width: 1700px) {
    .my-video-dimensions, .slate {
        width 1280px
        height 720px
    }
}

@media screen and (max-width: 1600px) {
    .my-video-dimensions, .slate {
        width 853px
        height 480px
    }
}

@media screen and (max-width: 1200px) {
    .my-video-dimensions, .slate {
        width 640px
        height 360px
    }
}