body
    background black

.pendingApproval-wrapper
    width 100%
    height 100vh
    background-image url('/img/download.jpeg')
    filter blur(12px)

.pendingApproval-wrapper-center
    width 20%
    height fit-content
    z-index 10
    h3, p
        text-align center 
        color white
    h3
        font-size 50px
        margin-bottom 30px
    p
        font-size 20px
        font-weight 200
        margin-top 20px
    input 
        position: relative;
        margin-top: 40px;
        width: 240px;
        height: 40px;
        background: #3c57c2;
        color: white;
        border: none;
        outline: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 17px;
        font-weight: 300;
        letter-spacing: 1px;