.stream-inactive-container
	margin 0 auto
	display none
	width fit-content
	text-align center
	margin-top 80px
	&.active
		display block
	h1.container-title
		color #333
		font-size 22px
		margin 0
		letter-spacing .3px
		b
			&.inactive
				color #db0000
				text-decoration underline
			&.active
				color green
	p.info
		color #7c8994
		font-size 15px
		margin 10px auto 0
		letter-spacing .3px
		a
			color #f05027
			text-decoration none
			&:hover
				text-decoration underline !important

.admin-home-content
	margin 0px !important
	width 100% !important
	height 100% !important
	background #f4f4f5

.admin-home-content h1
	display none !important

.currentStream-wrapper
	width calc(100% - 150px)
	max-width 2000px
	height calc(100% - 150px)
	position relative

.currentStream-wrapper-top
	width 100%
	height 100px
	h3
		font-size: 38px;
		font-weight: 300;
		color: #232323;
		letter-spacing: -0.9px;

.currentStream-wrapper-body
	width 100%
	height calc(100% - 100px)

.currentStream-wrapper-top-right
	width fit-content
	height fit-content
	right 0px

.currentStream-wrapper-body-s1
	width 100%
	height 35%
	display flex
	justify-content space-between

.currentStream-wrapper-body-s1-currentViewersGraph
	width 60%
	height 100%
	-webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	-moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	background white
	border-radius 4px

.currentStream-wrapper-body-s1-demographicsGraph
	width 35%
	height 100%
	-webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	-moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.05);
	background white
	border-radius 4px

.currentStream-wrapper-body-s1-currentViewersGraph-top
	width 100%
	height 100px
	position relative
	p
		margin-left 40px
		font-size: 23px;
		font-weight: 200;

.currentStream-wrapper-body-s1-currentViewersGraph-body
	width calc(100% - 80px)
	height calc(100% - 140px)
	position relative !important

.currentStream-wrapper-body-s1-demographicsGraph-wrapper
	width 70%
	height 80%

.currentStream-wrapper-body-s1-demographicsGraph-top
	width 100%
	height 100px
	p
		margin-left 40px
		font-size: 23px;
		font-weight: 200;
		
.currentStream-wrapper-body-s1-demographicsGraph-body
	width 100%
	height calc(100% - 100px)

.chartjs-size-monitor
	overflow visible
