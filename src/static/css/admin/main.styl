body
    background #fcfdff
    overflow hidden

.nav-container
    height 80px
    width 100%
    background white
    border-bottom 1px solid #f2f3f5
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.05)
    .nav-content
        width calc(100% - 60px)
        margin 0 auto
        height 100%
        display flex
        justify-content space-between
        align-items center
        .logo-container
            display flex
            align-items center
            justify-content left
            .logo
                background-image url("/img/dtech-logo.png")
                background-size cover
                background-position center
                background-repeat no-repeat
                width 40px
                height 40px
            .logo-title-container
                margin 0 0 0 10px
                h1.logo-title
                    color #333
                    font-weight 600
                    margin 0
                    letter-spacing .3px
                    font-size 22px
                p.logo-subtitle
                    color grey
                    font-size 13px
                    font-weight 400
                    margin -2px 0 2px
                    letter-spacing .3px

        .nav-links
            display flex
            justify-content right
            align-items center
            .nav-link
                color #333
                cursor pointer
                letter-spacing .3px
                margin 0 30px
                font-size 14px
                transition color .3s
                &:hover,
                &.active
                    color #f05027

.admin-home-wrapper
    height calc(100% - 81px)
    width 100%
    position relative
    .admin-home-content
        width calc(100% - 60px)
        height calc(100% - 30px)
        margin 30px auto 0
        overflow auto
        .page-title
            color #969696
            font-size 30px
            letter-spacing .3px
            margin 0
            text-align center