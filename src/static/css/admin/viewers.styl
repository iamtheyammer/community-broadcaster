				left 12px
				background-image url("/img/black-search-icon.svg")
				background-repeat no-repeat
				background-size cover
				background-position center
				width 20px
				height 20px
				opacity .15
			.search-input
				font-size 17px
				border none
				outline none
				color #333
				font-weight 500
				letter-spacing .5px
				border-bottom 1px solid #e7e8ea
				padding 7px 7px 7px 45px
				width 100%
				background transparent
				&::placeholder
