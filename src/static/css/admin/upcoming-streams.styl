.darken-overlay
    position fixed
    opacity 0
    visibility hidden
    width 100%
    height 100%
    top 0
    left 0
    background black
    z-index 100
    transition opacity .3s, visibility .3s
    &.active
        opacity 0.5
        visibility visible

.modal-container
    background white
    position fixed
    z-index 120
    top 50%
    left 50%
    transform translate(-50%, -50%) scale(0.5)
    opacity 0
    visibility hidden
    transition opacity .3s, visibility .3s, transform .3s cubic-bezier(0.34, 1.56, 0.64, 1)
    &.active
        opacity 1
        visibility visible
        transform translate(-50%, -50%) scale(1)
    .btn-wrap
        display flex
        justify-content right
        float right
        align-items center
        .cancel-btn
            color grey
            font-size 14px
            letter-spacing .3px
            cursor pointer
            margin 0
            &:hover
                text-decoration underline
        .submit-btn
            background rgb(240, 80, 39)
            outline none
            border-radius .3em
            font-size 14px
            color white
            padding 10px 25px
            margin-left 15px
            cursor pointer
            border none
            transition background .3s
            &:hover
                background #f26946

.delete-meeting-modal
    width 600px
    .modal-content
        padding 30px
        overflow auto
        text-align center
        .modal-title
            color #333
            font-size 22px
            letter-spacing .3px
            margin 0
        .confirm-msg
            color #7c8994
            font-size 15px
            letter-spacing .3px
            margin 10px 0 0
        .btn-wrap
            float none !important
            width fit-content
            margin 30px auto 0

.add-meeting-modal,
.edit-meeting-modal
    width 600px
    .top
        background #e9e9e9
        width 100%
        height 100px
        position relative
        h1.modal-title
            color #333
            font-size 22px
            text-align center
            letter-spacing .3px
            margin 0
            width fit-content
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
    .modal-form
        padding 10px 30px 30px
        overflow auto
        .name-input
            width 100%
            border none
            border-bottom 1px solid #dcdce6
            color #333333
            font-size 17px
            letter-spacing .3px
            font-weight 600
            margin-top 20px
            padding 8px
            background #f7f7f7
            outline none
            &.error
                border-bottom 1px solid #f23452
                &::placeholder
                    color #f23452
            &::placeholder
                color rgb(186, 186, 196)
                font-weight 400
        .runner-input
            width 100%
            outline none
            border none
            letter-spacing .3px
            background #f7f7f7
            border-bottom 1px solid #dcdce6
            color #333
            padding 8px
            font-weight 500
            font-size 17px
            margin 20px 0 40px
            resize none
            &.error
                border-bottom 1px solid #f23452
                &::placeholder
                    color #f23452
            &::placeholder
                color rgb(186, 186, 196)
                font-weight 400
        .btn-wrap
            margin-top 50px
        .date-time-container
            display flex
            justify-content left
            align-items center
            .date-time-display
                color #333
                font-size 14px
                margin 0
                letter-spacing .3px
                &.error
                    color #f23452
            .date-time-picker-btn
                background rgb(240, 80, 39)
                outline none
                border-radius .3em
                font-size 14px
                color white
                padding 8px 30px
                cursor pointer
                border none
                margin-right 15px
                transition background .3s
                &:hover
                    background #f26946

.add-meeting-btn
    margin-top 75px
    background rgb(240, 80, 39)
    outline none
    color white
    font-size 14px
    padding 12px 55px 12px 30px
    letter-spacing .3px
    border-radius .3em
    border none
    cursor pointer
    transition background .3s
    position relative
    &::after
        content ""
        background-image url("/img/add-icon.svg")
        background-size cover
        background-repeat no-repeat
        background-position center
        position absolute
        top 50%
        right 15px
        transform translateY(-50%)
        width 16px
        height 16px
    &:hover
        background #f26946

.upcoming-streams-table
  width 100%
  margin 20px 0 0
  .no-streams
    color #adadad
    display none
    font-size 22px
    text-align center
    font-weight 500
    letter-spacing .3px
    margin 30px 0 0 
    &.active
        display block
  table
    width 100%
    margin 0 !important
    border-collapse: collapse
    overflow-x auto
    min-width 1000px
    thead
      border-color rgb(237, 234, 234)
      box-sizing border-box
      tr
        width 100%
        padding 0
        box-sizing border-box
        border 0
        th
          text-align left
          padding 13px
          background #f1f0f0
          color #333
          font-size 14px
          font-weight 500

  tbody
    margin 0
    height 47px
    tr.stream
      width 100%
      vertical-align middle
      &.hidden
        display none
      td
        height 20px !important
        padding 30px 13px
        p
          margin 0
          color #4e4e4e
          letter-spacing .3px
          font-weight 600
        .action-btn-wrap
          display flex
          justify-content left
          align-items center
          .action-btn
            width 40px
            height 40px
            border-radius .3em
            position relative
            cursor pointer
            background #222222
            margin-right 20px
            transition background .3s
            &:hover
              background rgb(240, 80, 39)
            &.edit-btn
                .icon
                    background-image url("/img/edit-icon.svg")
            &.delete-btn
                .icon
                    background-image url("/img/delete-icon.svg")
                    
            .icon
                background-size cover
                background-repeat no-repeat
                background-position center
                width 20px
                height 20px
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

.simplepicker-wrapper
    z-index 1000 !important

.simpilepicker-date-picker
    position absolute !important
    margin 0 !important
    top calc(50% - 10%) !important
    left 50% !important
    transform translate(-50%, -50%) !important

.simplepicker-day-header
    background-color #e0461f !important
    color #fff !important

.simplepicker-date-section
    background-color rgb(240, 80, 39) !important
    color #fff !important

.simplepicker-time
    color #fff !important

.simplepicker-fade
    color #fff !important

.simplepicker-time-section input&
    transition border-bottom-color .3s
    &:focus
        border-bottom-color rgb(240, 80, 39) !important

.simplepicker-calender
    td
        cursor pointer !important
        &::after
            background-color rgb(240, 80, 39) !important
    td:hover
        &::after
            background-color transparent !important
    td.active
        &::after
            background-color rgb(240, 80, 39) !important

.simplepicker-btn
    border-color rgb(240, 80, 39) !important
    color rgb(240, 80, 39) !important
    outline none !important
    cursor pointer !important
    boder-radius .3em !important
    transition background .3s, color .3s !important
    &:hover
        background rgb(240, 80, 39) !important
        color #fff !important