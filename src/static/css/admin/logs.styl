.logs-page-container
    width 1280px
    margin 0 auto
    position relative
    .search-container
        display flex
        justify-content space-between
        width 100%
        margin 20px auto
        align-items flex-end
        z-index 10
        .input-wrap
            position relative
            width calc(100% - 350px)
            height fit-content
            .search-icon
                position absolute
                top 50%
                transform translateY(-50%)
                left 12px
                background-image url("/img/black-search-icon.svg")
                background-repeat no-repeat
                background-size cover
                background-position center
                width 20px
                height 20px
                opacity .15
            .search-input
                font-size 17px
                border none
                outline none
                background transparent
                color #333
                font-weight 500
                letter-spacing .5px
                border-bottom 1px solid #e7e8ea
                padding 7px 7px 7px 45px
                width 100%
                &::placeholder
                    color #cdc8c8
                    font-weight 400
        .log-type-filter-container
            p.label
                color #cdc8c8
                font-size 14px
                margin 0 0 5px 5px
                letter-spacing .3px
            .log-type-select
                position relative
                width 250px
                &.active
                    .select-btn
                        border-bottom-right-radius 0
                        border-bottom-left-radius 0
                        .arrow-icon
                            transform translateY(-50%) rotate(180deg) !important
                    .select-menu
                        display block
                .select-btn
                    width 100%
                    background white
                    height 35px
                    border-radius .3em
                    border 1px solid #e7e8ea
                    position relative
                    cursor pointer
                    p.select-value
                        color #333
                        font-size 14px
                        letter-spacing .3px
                        margin 0
                        position absolute
                        top 50%
                        left 23px
                        transform translateY(-50%)
                    .arrow-icon
                        background-image url("/img/select-down-arrow.svg")
                        background-size cover
                        background-position center
                        background-repeat no-repeat
                        width 16px
                        height 16px
                        position absolute
                        top 50%
                        opacity .6
                        transform translateY(-50%)
                        right 20px
                .select-menu
                    position absolute
                    display none
                    top 36px
                    padding 10px 0
                    background white
                    width 100%
                    border 1px solid #e7e8ea
                    border-bottom-right-radius .3em
                    border-bottom-left-radius .3em
                    .option
                        padding 10px 0 10px 15px
                        transition background .3s
                        &.all-option p
                            color #333 !important
                            background none !important
                        &:hover
                            background rgba(0,0,0,0.05)
                        p
                            letter-spacing .3px
                            font-size 13px
                            cursor pointer
                            padding 7px 8px
                            border-radius .3em
                            width fit-content 
                            color white
                        
                            
                            
.logs-container
    .no-logs
        color #b5b5b5
        font-size 17px
        font-weight 500
        letter-spacing .3px
        margin 40px auto 0
        text-align center
        display none
    .log
        width 100%
        height fit-content
        padding 20px 0
        background white
        margin 20px auto
        box-shadow 0 0 8px 0 rgba(0,0,0,0.08)
        &.hidden
            display none
        .log-content
            width 95%
            margin 0 auto
            display flex
            align-items center
            justify-content space-between
            flex-flow row wrap
            .msg-info
                display flex
                justify-content left
                align-items center
                .log-type
                    background #f36743
                    color white
                    padding 5px 30px
                    font-size 12px
                    font-weight 700
                    letter-spacing .3px
                    margin-right 30px
                    border-radius .3em
                .message
                    color #333
                    font-size 16px
                    letter-spacing .3px
                    margin 0
                    font-weight 500
                    b
                        font-size 11px
                        color grey
                        font-weight 300
                        margin 0 5px
            .time
                font-size 12px
                letter-spacing .3px
                color grey
                margin 0