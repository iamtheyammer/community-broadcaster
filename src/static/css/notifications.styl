.notif-wrapper
    width fit-content
    height fit-content
    bottom 30px
    left 30px
    position fixed
    z-index 100

.notif-wrapper-object
    width fit-content
    height 50px
    display flex
    -webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.10);
    -moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.10);
    box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.10);
    background-color white
    opacity 0
    transition 1s
    margin-top 20px
    border-radius 3px
    position relative
    // bottom -50px
    &.active
        opacity 1
        // bottom 0px

.notif-wrapper-object-icon
    width 40px
    height 40px
    margin-left 5px
    border-radius 3px
    margin-top 5px
    background-color #1853d2
    background-image url('/img/information.svg')
    background-size 20px !important 

.notif-wrapper-object-txt
    width fit-content
    height 100%
    margin-left 22px
    margin-right 22px
    p
        position relative

.notif-wrapper-padder
    width 100%
    height 50px
    transition 1s
    &.active
        height 0px