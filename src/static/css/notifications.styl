.notif-wrapper
    width fit-content
    height fit-content
    bottom 3%
    left 3%
    position fixed
    z-index 100

.notif-wrapper-object
    width fit-content
    height 50px
    display flex
    -webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.15);
    -moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.15);
    box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.15);
    background-color white
    border-radius 3px

.notif-wrapper-object-icon
    width 40px
    height 40px
    margin-left 5px
    border-radius 3px
    margin-top 5px
    background-color #1853d2
    background-image url('/img/information.svg')
    background-size 18px !important 

.notif-wrapper-object-txt
    width fit-content
    height 100%
    margin-left 20px
    margin-right 20px
