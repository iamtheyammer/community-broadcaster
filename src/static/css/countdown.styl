body
    margin 0
    overflow hidden

.bg
    background-image linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url("../img/countdown-bg.png")
    background-size cover
    background-position center
    background-repeat no-repeat
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    .logo-container
        background-image url("../img/dtech-logo.png")
        background-size cover
        background-repeat no-repeat
        background-position center
        width 45px
        height 45px
        position absolute
        top 30px
        left 37.5px
    .countdown-container
        position absolute
        top calc(50% - 30px)
        left 50%
        transform translate(-50%, -50%)
        h1.title
            color lightgrey
            font-size 18px
            font-weight 100
            text-transform uppercase
            letter-spacing .3px
            margin 0
            text-align center
        .timer
            margin-top 20px
            display flex
            justify-content center
            align-items center
            .time-container
                text-align center
                margin 0 50px
                width 200px
                h1
                    color white
                    font-weight 800
                    font-size 120px
                    margin 0
                    letter-spacing .5px
                p
                    color lightgrey
                    font-size 13px
                    font-weight 100
                    letter-spacing .3px
                    text-transform uppercase
                    margin 5px 0 0