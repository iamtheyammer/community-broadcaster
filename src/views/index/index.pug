html
  head
    include ../main
    link(rel="Stylesheet" href="/css/index/index.css")
    link(href="https://unpkg.com/video.js@7/dist/video-js.min.css" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js")
    script.
      const name = "#{displayName}"
      if(name.length > 0) {
        console.log(name)
      }
      var rawTokens = "#{tokenArr}"
      window.tokens = JSON.parse(rawTokens.replace(/&quot;/g,'"'));

      var siteControlsRaw = "#{controlArr}"
      window.siteControls = JSON.parse(siteControlsRaw.replace(/&quot;/g,'"'))

      var userRaw = "#{user}"
      users = JSON.parse(userRaw.replace(/&quot;/g,'"'));
      window.user = users[0]
      
      var streamRaw = "#{stream}"
      if(streamRaw) {
         window.stream = JSON.parse(streamRaw.replace(/&quot;/g,'"'))
      }
     
      
  body
    //- .index-wrapper
    //-   .index-wrapper-logo-wrapper
    //-     .index-wrapper-logo-wrapper-logo.reg-image(onclick="window.location.href='/auth/redirect'")
    //-     .index-wrapper-logo-wrapper-text
    //-       p.fullVertCenter Community Broadcast
    .nav-container
        .nav-content
            .logo-wrap
                .logo(onclick="window.location.href='/auth/redirect'")
                h1.title KoiStream
            button.logout-btn(onclick="window.location.href='/auth/logout'") Logout
    .page-content
      .stream-container
        .stream-video
          img(src="/img/countdown-bg.png")
          .slate.reg-image
          video(id="my-video" muted="muted" class="video-js" controls preload="auto" width="1920" height="1080" poster="/img/download.jpeg")
            source(src="https://stream.designtechhs.com/playlist.m3u8" type="application/x-mpegURL")
        .stream-info-container
          .stream-info-content
            h1.stream-title
            p.stream-runner
            .report-error
              .icon
              p Report an Error
            .viewer-count-container
              .icon
              p 0 Viewers
      .chat-widget
        .title-container
          h1.title Live Chat
          p.chat-status
        button.enable-autoscroll Enable Autoscroll
        .live-chat-container
          .chat-content
            //h1.no-chats No Messages
            p.chat <b class="sender">Administrator - Jackson Lawrence</b> Welcome to KoiStream! Today we are running our first school-wide test of the stream. We will be using this platform to broadcast community meetings in the near future. If you have and issues, make sure to report an error. If you have any questions, feel free to email either of us at <a href="mailto:jlawrence21@dtechhs.com">jlawrence21@dtechhs.com</a> or <a href="mailto:aappleby21@dtechhs.com">aappleby21@dtechhs.com</a>
        .input-container
          textarea.chat-input(data-gramm_editor="false" placeholder="Send a message...")
          .submit-chat-btn
            .icon
    include ./reportErrors
    include ../notifications
  
script(src="https://cdnjs.cloudflare.com/ajax/libs/video.js/7.8.0/video.min.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/videojs-contrib-hls/5.15.0/videojs-contrib-hls.min.js")
