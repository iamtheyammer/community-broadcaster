link(rel="stylesheet" href="https://markdown-images-369543.s3-us-west-2.amazonaws.com/simplepicker/simplepicker.css")
script(src="https://markdown-images-369543.s3-us-west-2.amazonaws.com/simplepicker/simplepicker.js")
script.
	let streamsRaw = "#{upcomingStreams}"
	if(streamsRaw) {
		window.streams  = JSON.parse(streamsRaw.replace(/&quot;/g,'"'));
	}

.darken-overlay
.add-meeting-modal.modal-container
	.top
		h1.modal-title Add a Community Meeting
	.modal-form
		input.name-input(type="text" placeholder="Stream Name")
		textarea.runner-input(placeholder="Stream Description" data-gramm_editor="false")
		.date-time-container
			button.date-time-picker-btn Pick Time
			p.date-time-display No selected date or time.
		.btn-wrap
			p.cancel-btn Cancel
			button.submit-btn Done
.edit-meeting-modal.modal-container
	.top
		h1.modal-title Edit Community Meeting
	.modal-form
		input.name-input(type="text" placeholder="Stream Name")
		textarea.runner-input(placeholder="Stream Description" data-gramm_editor="false")
		.date-time-container
			button.date-time-picker-btn Pick Time
			p.date-time-display No selected date or time.
		.btn-wrap
			p.cancel-btn Cancel
			button.submit-btn Update
.delete-meeting-modal.modal-container
	.modal-content
		h1.modal-title Delete Community Meeting: (Name)
		p.confirm-msg Deleting a community meeting is permanent!
		.btn-wrap
			p.cancel-btn Cancel
			button.submit-btn Delete

button.add-meeting-btn Add a Community Meeting
.upcoming-streams-table
	table
		thead
			tr
				th.stream-id-head ID
				th.stream-name-head Community Meeting Name
				th.stream-date-head Date
				th.stream-time-head Time
				th.actions-head Actions
		tbody
	h1.no-streams There are currently no scheduled streams.